<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:text="TITULO"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nombre"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="@color/purple_700" />

    <TextView
            android:text="Dato RFC"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rfc"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_direccion" />

    <TextView
            android:text="RFC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView20"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_nombre"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="DIreccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            app:layout_constraintTop_toBottomOf="@+id/textView20"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView21"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" />

    <TextView
            android:text="Estado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />

    <TextView
            android:text="Dato direccion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_direccion"
            app:layout_constraintTop_toBottomOf="@+id/tv_rfc"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toEndOf="@+id/textView21"
            android:layout_marginStart="16dp" />

    <TextView
            android:text="Dato email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_email"
            app:layout_constraintTop_toBottomOf="@+id/tv_direccion"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_direccion" />

    <TextView
            android:text="Dato estado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_estado"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_email"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/tv_direccion"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" />
</androidx.constraintlayout.widget.ConstraintLayout>